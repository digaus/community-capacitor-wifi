{
  "name": "@capacitor-community/wifi",
  "version": "0.0.1",
  "description": "Wifi Plugin for iOS, Android and Electron",
  "main": "dist/plugin.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "scripts": {
    "lint": "npm run prettier -- --check && npm run swiftlint -- lint",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\"",
    "swiftlint": "node-swiftlint",
    "build": "npm run clean && tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build",
    "build-electron": "rimraf ./electron/dist && cd ./electron && tsc && rollup --config rollup.config.js"
  },
  "author": "Dirk Gausmann+",
  "license": "MIT",
  "devDependencies": {
    "@capacitor/android": "^2.4.2",
    "@capacitor/core": "^2.4.2",
    "@capacitor/ios": "^2.4.2",
    "@ionic/prettier-config": "^1.0.0",
    "@ionic/swiftlint-config": "^1.0.0",
    "@rollup/plugin-node-resolve": "^8.1.0",
    "@types/node": "^12.0.0",
    "electron": "^11.5.0",
    "prettier": "^2.0.5",
    "prettier-plugin-java": "^0.8.0",
    "rimraf": "^3.0.0",
    "rollup": "^2.27.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "swiftlint": "^1.0.1",
    "tslib": "^1.13.0",
    "typescript": "~3.8.3"
  },
  "peerDependencies": {
    "@capacitor/core": "^2.4.2"
  },
  "files": [
    "dist/",
    "ios/",
    "android/",
    "electron/",
    "CapacitorCommunityWifi.podspec"
  ],
  "keywords": [
    "capacitor",
    "plugin",
    "native"
  ],
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    },
    "electron": {
      "src": "electron/dist/plugin.js"
    }
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "repository": {
    "type": "git",
    "url": "https://github.com/digaus/community-capacitor-wifi"
  },
  "bugs": {
    "url": "https://github.com/digaus/community-capacitor-wifi/issues"
  },
  "dependencies": {
    "node-wifi": "^2.0.13"
  }
}
